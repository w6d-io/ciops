{
  "$id": "https://gitlab.w6d.io/w6d/githubmgt/internal/embedx/config.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WILDCARD CI Operator",
  "type": "object",
  "definitions": {
    "listen": {
      "title": "listen port",
      "type": "string",
      "oneOf": [
        {
          "pattern": "^:([0-9]+)$"
        },
        {
          "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}:([0-9]+)$"
        },
        {
          "format": "uri"
        }
      ],
      "examples": [
        "127.0.0.1:6831",
        ":4321"
      ]
    },
    "hook": {
      "type": "object",
      "required": ["url", "scope"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "scope": {
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "listen" : {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "metrics": {
          "$ref": "#/definitions/listen"
        },
        "probe": {
          "$ref": "#/definitions/listen"
        }
      }
    },
    "webhook": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "integer"
        },
        "host": {
          "anyOf": [
            {
              "format": "ipv4"
            },
            {
              "format": "hostname"
            },
            {
              "const": ""
            }
          ]
        }
      }
    },
    "leaderElection": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "leaderElect": {
          "type": "boolean",
          "default": false
        },
        "resourceName": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      }
    },
    "namespace": {
      "type": "string"
    },
    "hooks": {
      "type": ["array","null"],
      "items": {
        "$ref": "#/definitions/hook"
      }
    },
    "pipelinerun": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "prefix" : {
          "type": "string"
        },
        "podTemplate": {
          "type": "object"
        },
        "workspaces": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        },
        "workspacePipelineTaskBinding": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "subPath", "workspace"],
            "properties": {
              "name": {
                "type": "string"
              },
              "subPath": {
                "type": "string"
              },
              "workspace": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}

